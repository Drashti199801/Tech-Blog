<%- include('layouts/header.ejs'); -%>
<%- include('layouts/admin_nav.ejs'); -%>
<div class="addpage">
	<h2>Edit Page</h2>
    <form action="/editpages/<%= encodeURIComponent(page.id) %>" method="POST" enctype="multipart/form-data">
        <label for="title">Page Title: </label>
        <input type="text" name="title" id="title" value="<%= page.title %>"><br>
        <label for="image">Image:</label>
        <input type="file" class="form-input" name="heroImage" id="heroImage"><br>
        <textarea name="content" id="content"><%- page.content %></textarea><br> <!-- textarea for CKEditor content -->
        <div id="editor"></div>
        <button type="submit">Submit</button>
    </form>
</div>  

<!-- Include CKEditor script -->
<script src="https://cdn.ckeditor.com/4.17.1/standard/ckeditor.js"></script> 

<script>
CKEDITOR.editorConfig = function( config ) {
	config.toolbarGroups = [
		{ name: 'clipboard', groups: [ 'clipboard', 'undo' ] },
		{ name: 'editing', groups: [ 'find', 'selection', 'spellchecker', 'editing' ] },
		{ name: 'document', groups: [ 'mode', 'document', 'doctools' ] },
		{ name: 'forms', groups: [ 'forms' ] },
		{ name: 'basicstyles', groups: [ 'basicstyles', 'cleanup' ] },
		'/',
		{ name: 'paragraph', groups: [ 'list', 'indent', 'blocks', 'align', 'bidi', 'paragraph' ] },
		{ name: 'links', groups: [ 'links' ] },
		{ name: 'insert', groups: [ 'insert' ] },
		'/',
		{ name: 'styles', groups: [ 'styles' ] },
		{ name: 'colors', groups: [ 'colors' ] },
		{ name: 'tools', groups: [ 'tools' ] },
		{ name: 'others', groups: [ 'others' ] },
		{ name: 'about', groups: [ 'about' ] }
	];

	config.removeButtons = 'PasteFromWord,Templates,Save,NewPage,ExportPdf,Preview,Print,Find,Replace,SelectAll,Form,Checkbox,Radio,TextField,ImageButton,Button,Select,Textarea,HiddenField,CopyFormatting,CreateDiv,Anchor,ShowBlocks';
};

    CKEDITOR.replace('content'); 
</script>
